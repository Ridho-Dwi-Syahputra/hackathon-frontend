<?xml version="1.0" encoding="utf-8"?>
<network-security-config>

    <!-- ⚙️ Default: allow HTTPS only (secure) -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- ✅ Allow local development traffic -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Android Emulator host -->
        <domain includeSubdomains="true">10.0.2.2</domain>
        <!-- Local PC IP LAN (ubah sesuai jaringan kamu jika perlu) -->
        <domain includeSubdomains="true">192.168.0.0</domain>
        <domain includeSubdomains="true">192.168.1.0</domain>
        <domain includeSubdomains="true">localhost</domain>
    </domain-config>

    <!-- ✅ Allow HTTPS DevTunnel (self-signed cert) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">asse.devtunnels.ms</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>

</network-security-config>
